<div class="text-center fw-bold mt-3">
  <h2>Users Links</h2>
  <% if user_signed_in? %>
    <h2 style="margin-top: 150px; margin-bottom: 50px">Welcome, <%= current_user.email %>!</h2>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn btn-outline-danger" %>
    <%= link_to "Edit Registration", edit_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "Rooms", rooms_path, class: "btn btn-success" %>

  <% elsif !admin_signed_in? %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success" %>
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary" %>
    <% end %>

  <% if admin_signed_in? %>
  <div>
    <h2>Admin Links</h2>
    <h2 style="margin-top: 150px; margin-bottom: 50px">Welcome, <%= current_admin.email %>!</h2>
      <%= link_to "Sign out", destroy_admin_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn btn-outline-danger" %>
      <%= link_to "Edit Registration", edit_admin_registration_path, class: "btn btn-primary" %>
      <%= link_to "Rooms", class: "btn btn-success" %>
  </div>
  <% elsif !user_signed_in? %>
  <h2>Admin access only!</h2>
    <%= link_to "Sign up", new_admin_registration_path, class: "btn btn-success" %>
    <%= link_to "Sign in", new_admin_session_path, class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
